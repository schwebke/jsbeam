{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "modelType": {
      "type": "string",
      "enum": ["structural"]
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "x": {
            "type": "number"
          },
          "z": {
            "type": "number"
          },
          "constraints": {
            "type": "object",
            "properties": {
              "x": {
                "type": "boolean"
              },
              "z": {
                "type": "boolean"
              },
              "r": {
                "type": "boolean"
              }
            },
            "required": ["x", "z", "r"]
          },
          "loads": {
            "type": "object",
            "properties": {
              "fx": {
                "type": "number"
              },
              "fz": {
                "type": "number"
              },
              "m": {
                "type": "number"
              }
            },
            "required": ["fx", "fz", "m"]
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["id", "x", "z", "constraints", "loads"]
      }
    },
    "beams": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["truss", "ebbeam", "ebsbeam"]
          },
          "id": {
            "type": "string"
          },
          "nodeIds": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "mass": {
            "type": "number"
          },
          "materialProperties": {
            "type": "object",
            "properties": {
              "EA": {
                "type": "number"
              },
              "EI": {
                "type": "number"
              },
              "GA": {
                "type": "number"
              }
            },
            "required": ["EA"],
            "allOf": [
              {
                "if": {
                  "properties": {
                    "type": {
                      "const": "ebbeam"
                    }
                  }
                },
                "then": {
                  "required": ["EI"]
                }
              },
              {
                "if": {
                  "properties": {
                    "type": {
                      "const": "ebsbeam"
                    }
                  }
                },
                "then": {
                  "required": ["EI", "GA"]
                }
              }
            ]
          },
          "distributedLoads": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["uniform", "linear"]
                },
                "direction": {
                  "type": "string",
                  "enum": ["x", "z"]
                },
                "value": {
                  "type": "number"
                },
                "valueEnd": {
                  "type": "number"
                }
              },
              "required": ["type", "direction", "value"]
            }
          },
          "internalHinges": {
            "type": "object",
            "properties": {
              "left": {
                "type": "object",
                "properties": {
                  "m": {
                    "type": "boolean"
                  }
                },
                "required": ["m"]
              },
              "right": {
                "type": "object",
                "properties": {
                  "m": {
                    "type": "boolean"
                  }
                },
                "required": ["m"]
              }
            }
          }
        },
        "required": ["type", "id", "nodeIds", "mass", "materialProperties"]
      }
    }
  },
  "required": ["version", "modelType", "nodes", "beams"]
}